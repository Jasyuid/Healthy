<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFBCBCBC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_margin="30dp"
        android:textSize="22sp"
        android:id="@+id/calibrate_editor"
        android:text="Calibration"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/calibrate_editor"
        android:layout_margin="30dp"
        android:textSize="22sp"
        android:id="@+id/average_force"
        android:text="@string/nul"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/average_force"
        android:layout_margin="30dp"
        android:textSize="22sp"
        android:id="@+id/time_remaining"
        android:text="@string/nul"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/time_remaining"
        android:id="@+id/toggle_button"
        android:text="@string/nul"/>

</RelativeLayout>